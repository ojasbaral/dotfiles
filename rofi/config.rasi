@import "~/.config/rofi/themes/gruvbox/gruvbox-dark.rasi"
configuration {
  display-drun: "Applications:";
  display-windows: "Windows:";
  drun-display-format: "{icon} {name}";
  font: "Source Sans Pro 14";
  modi: "window, run, drun";
  show-icons: true;
  icon-theme: "Papirus";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}
